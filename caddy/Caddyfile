http://mirrors2.sjtug.sjtu.edu.cn/debian {
    redir /debian /debian/ 301
}

http://mirrors2.sjtug.sjtu.edu.cn/debian/* {
    log {
        output stdout
        format single_field common_log
    }
    file_server /* browse {
        root /srv/disk1
        hide .*
    }
    @hidden {
        path */.*
    }
    respond @hidden 404
}

